@model CourseModel

@{
    ViewData["Title"] = "Add a new course";
}

<h2>Add a new course</h2>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Course" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Course" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Course">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>


