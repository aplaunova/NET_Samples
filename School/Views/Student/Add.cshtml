@model StudentModel

@{
    ViewData["Title"] = "Add a new student";
}

<h2>Add a new student</h2>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Student" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Surname" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Surname">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="BirthdayYear" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="BirthdayYear">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Class" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Class">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>


