@model List<StudentModel>
@{
    ViewData["Title"] = "Average ratings";
}

<h2>Average rating</h2>

<br/>
<a asp-controller="Rating" asp-action="Index">Back</a>
</br>


@if (Model.Count > 0)
{

    <table class="table table-striped">
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Average Rating</th>
        </tr>

        @foreach (var rating in Model)
        {
            <tr>
                <td>@rating.Name</td>
                <td>@rating.Surname</td>
                <td>@rating.AverageRating</td>
            </tr>
        }


    </table>
}

else
{
    <td>There is no data</td>
}
