@model RatingModel

@{
    ViewData["Title"] = "Add a new rating";
}

<h2>Add a new rating</h2>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Rating" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="StudentName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="StudentName">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="StudentSurname" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="StudentSurname">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CourseName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="CourseName">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Rating">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Description">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>


