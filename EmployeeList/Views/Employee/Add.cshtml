@model EmployeeModel
@{
    ViewData["Title"] = "Add a new employee";
}

<h2>Add a new employee</h2>


@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Employee" asp-action="Add" method="post">

    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Surname" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Surname">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="DoB" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="DoB">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Position" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Position">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Department" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Department">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>
