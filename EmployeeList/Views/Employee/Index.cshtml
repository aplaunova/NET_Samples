@model List<EmployeeModel>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees list</h2>

<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th>Surname</th>
        <th><a asp-controller="Employee" asp-action="Department">Department</a></th>
        <th></th>
    </tr>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.Name</td>
            <td>@employee.Surname</td>
            <td>@employee.Department</td>
            <td><a asp-controller="Employee" asp-action="View" asp-route-id="@employee.Id">View Employee</a></td>
        </tr>
    }


</table>



