@model List<ItemModel>
@{
    ViewData["Title"] = "MyCart";
}

@if (Model.Count == 0)
{
    <h3>Your cart is empty!</h3>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Item name</th>
            <th>Item price</th>
            <th>Item count</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>@item.Name</td>
        <td>@item.Price</td>
        <td>@item.ItemCount</td>
        <td><a asp-controller="Account" asp-action="Delete" asp-route-id="@item.Id">Dzēst</a></td>
    </tr>
        }
    </table>
    <div class="caption text-center">
          <div class="btn-group" role="group" aria-label="...">
              <button type="button" class="btn btn-default"><a asp-controller="Account" asp-action="Confirm">Pirkuma apstiprināšana</a></button>
          </div>
    </div>


        }
